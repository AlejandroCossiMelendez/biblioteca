<script>
document.addEventListener('DOMContentLoaded', function() {
    const mobileMenuToggle = document.querySelector('.mobile-menu-toggle');
    const sidebar = document.querySelector('.sidebar');
    const overlay = document.querySelector('.mobile-menu-overlay');
    const sidebarLinks = document.querySelectorAll('.sidebar-link');

    // Funci√≥n para abrir el men√∫
    function openMenu() {
        sidebar.classList.add('show');
        overlay.classList.add('show');
        document.body.style.overflow = 'hidden';
    }

    // Funci√≥n para cerrar el men√∫
    function closeMenu() {
        sidebar.classList.remove('show');
        overlay.classList.remove('show');
        document.body.style.overflow = '';
    }

    // Evento para el bot√≥n de toggle
    mobileMenuToggle.addEventListener('click', function() {
        if (sidebar.classList.contains('show')) {
            closeMenu();
        } else {
            openMenu();
        }
    });

    // Cerrar men√∫ al hacer clic en el overlay
    overlay.addEventListener('click', closeMenu);

    // Cerrar men√∫ al hacer clic en un enlace
    sidebarLinks.forEach(link => {
        link.addEventListener('click', function() {
            if (window.innerWidth <= 768) {
                closeMenu();
            }
        });
    });

    // Cerrar men√∫ al cambiar el tama√±o de la ventana
    window.addEventListener('resize', function() {
        if (window.innerWidth > 768) {
            closeMenu();
        }
    });

    // Manejar el modal y la accesibilidad
    const modals = document.querySelectorAll('.modal');
    modals.forEach(modal => {
        modal.addEventListener('show.bs.modal', function () {
            document.querySelector('.main-content').removeAttribute('aria-hidden');
        });
        
        modal.addEventListener('hidden.bs.modal', function () {
            document.querySelector('.main-content').setAttribute('aria-hidden', 'false');
        });
    });
});
</script>

